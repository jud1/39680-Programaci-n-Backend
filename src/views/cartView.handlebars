{{#if cart}}
   <h1>Cart view</h1>
   <ul id="lista_productos" data-id="{{cart}}" class="uk-grid-small uk-child-width-1-3@s" uk-grid="">
      {{#if products}}
         {{#each products}}
            <li>
               <div class="uk-card uk-card-default">
                  <div class="uk-card-header">
                     <div class="uk-grid-small uk-flex-middle" uk-grid="">
                        <div class="uk-width-expand">
                           <h3 class="uk-card-title uk-margin-remove-bottom">{{this.product.name}}</h3>
                           <p class="uk-text-meta uk-margin-remove-top">
                              ${{this.product.price}} - stock:{{this.product.stock}} - categor√≠a: {{this.product.category}}
                           </p>
                        </div>
                     </div>
                  </div>
                  <div class="uk-card-body">
                     <p>{{this.product.description}}</p>
                     <p>Cantidad: {{this.quantity}}</p>
                  </div>
                  <div class="uk-card-footer">
                     <button id="{{this.product._id}}" class="uk-button delete-button">
                        Eliminar
                        <span uk-icon="icon: trash"></span>
                     </button>
                  </div>
               </div>
            </li>
         {{/each}}
      {{else}}
         <h2 class="uk-width-1-1">No hay productos en el carro</h2>
      {{/if}}
   </ul>
{{else}}
   <h1>Invalid Cart</h1>
{{/if}}
<script src="/assets/js/carts.js"></script>
