{{#if products}}
   <h1>Cart view</h1>
   <ul id="lista_productos" class="uk-grid-small uk-child-width-1-3@s" uk-grid="">
      {{#each products}}
         <li>
            <div class="uk-card uk-card-default">
               <div class="uk-card-header">
                  <div class="uk-grid-small uk-flex-middle" uk-grid="">
                     <div class="uk-width-expand">
                        <h3 class="uk-card-title uk-margin-remove-bottom">{{this.product.name}}</h3>
                        <p class="uk-text-meta uk-margin-remove-top">
                           ${{this.product.price}} - stock:{{this.product.stock}} - categor√≠a: {{this.product.category}}
                        </p>
                     </div>
                  </div>
               </div>
               <div class="uk-card-body">
                  <p>{{this.product.description}}</p>
                  <p>Cantidad: {{this.quantity}}</p>
               </div>
            </div>
         </li>
      {{/each}}
   </ul>
{{else}}
   <h1>Invalid Cart</h1>
{{/if}}

