<div class="uk-flex uk-flex-between uk-flex-middle">
   <h1>Productos Real Time</h1>
   {{> filter-dropdown info=info}}
</div>
<ul id="lista_productos" class="uk-grid-small uk-child-width-1-3@s" uk-grid="" data-cart="{{session.user.id_cart}}">
   {{#each products}}
      <li class="product-card" id="{{this._id}}">
         <div class="uk-card uk-card-default">
            <div class="uk-card-header">
               <div class="uk-grid-small uk-flex-middle" uk-grid="">
                  <div class="uk-width-expand">
                     <h3 class="uk-card-title uk-margin-remove-bottom">{{this.name}}</h3>
                     <p class="uk-text-meta uk-margin-remove-top">
                        ${{this.price}} - stock:{{this.stock}} - categor√≠a: {{this.category}}
                     </p>
                  </div>
               </div>
            </div>
            <div class="uk-card-body">
               <p>{{this.description}}</p>
            </div>
            <div class="uk-card-footer">
               <button class="uk-button uk-button-primary add-cart">Add to cart</button>
            </div>
         </div>
      </li>
   {{/each}}
</ul>
{{>pagination info=info}}

